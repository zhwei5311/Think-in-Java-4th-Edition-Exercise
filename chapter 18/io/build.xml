     Unless="nu.xom.Node"
     message="You must install the XOM library from http://www.xom.nu"/>
    <echo message="Building 'io'"/>
    <javac
     classpathref="project.class.path"
     debug="true"
     srcdir="${basedir}">
      <compilerarg value="-Xmaxerrs"/>
      <compilerarg value="10"/>
    </javac>
    <echo message="Build 'io' succeeded"/>
  </target>

